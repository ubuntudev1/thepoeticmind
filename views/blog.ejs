<section class="banner_area d-flex align-items-center bg-light" 

         style="min-height: 80vh; margin-top: 100px; padding: 80px;">

  <div class="container">

    <div class="row justify-content-center">

      

      <!-- Left Column: Search & Categories -->

      <div class="col-lg-6 col-md-8 col-sm-12 mb-4">

        <div class="banner_content text-center p-4 p-md-5 shadow rounded bg-white h-100">

          <!-- Title -->

          <h2 class="mb-3 fw-bold text-primary">Browse Poem Categories</h2>

          <p class="text-muted mb-4">Discover poems that resonate with your interests.</p>



          <!-- Search Bar -->

          <form id="searchForm" class="d-flex justify-content-center mb-4 position-relative flex-wrap">

            <input 

              id="searchInput"

              class="form-control me-2 mb-2 mb-sm-0 shadow-sm"

              type="search"

              placeholder="Search poems or categories..."

              style="max-width: 350px; font-size: 0.9rem; padding: 10px;">

            <button class="btn btn-primary px-3 shadow-sm" type="submit">Search</button>



            <!-- Autosuggestions -->

            <ul id="suggestions" class="list-group position-absolute w-100 mt-5 shadow-sm" 

                style="max-width: 350px; display: none; z-index: 1000;"></ul>

          </form>



          <!-- Category List -->

          <div class="category-list">

            <ul class="list-group list-group-flush text-start mx-auto shadow-sm rounded" style="max-width: 350px;">

              <li class="list-group-item py-3 fw-semibold d-flex justify-content-between align-items-center">

                <a href="/api/poems/category?category=Politics" class="category-link">Politics and Nation Building</a>

                

              </li>

              <li class="list-group-item py-3 fw-semibold d-flex justify-content-between align-items-center">

                <a href="/api/poems/category?category=Woman" class="category-link">Mother (Woman)</a>

                

              </li>

              <li class="list-group-item py-3 fw-semibold d-flex justify-content-between align-items-center">

                <a href="/api/poems/category?category=Man" class="category-link">Father (Man)</a>

                

              </li>

              <li class="list-group-item py-3 fw-semibold d-flex justify-content-between align-items-center">

                <a href="/api/poems/category?category=Love" class="category-link">Love</a>

                

              </li>

              <li class="list-group-item py-3 fw-semibold d-flex justify-content-between align-items-center">

                <a href="/api/poems/category?category=Pains" class="category-link">Dealing with Trauma Pains</a>

                

              </li>

              <li class="list-group-item py-3 fw-semibold d-flex justify-content-between align-items-center">

                <a href="/api/poems/category?category=Dreams" class="category-link">Dreams</a>

                

              </li>

            </ul>

          </div>

        </div>

      </div>



      <!-- Results Section -->

      <div id="poemResults" class="mt-4"></div>

    </div>

  </div>

</section>



