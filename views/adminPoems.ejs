<!-- views/adminPoems.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin - Vet Poems</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
<div class="container mt-5">
  <h2 class="mb-4">Poem Submissions</h2>

  <table class="table table-bordered bg-white shadow-sm">
    <thead class="table-primary">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Poem</th>
        <th>Status</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% poems.forEach(poem => { %>
        <tr>
          <td><%= poem.name %></td>
          <td><%= poem.email %></td>
          <td><pre><%= poem.poem %></pre></td>
          <td><%= poem.status %></td>
          <td>
            <% if (poem.status === 'pending') { %>
              <form action="/admin/approve/<%= poem._id %>" method="POST" style="display:inline-block">
                <button class="btn btn-success btn-sm">Approve</button>
              </form>
              <form action="/admin/reject/<%= poem._id %>" method="POST" style="display:inline-block">
                <button class="btn btn-danger btn-sm">Reject</button>
              </form>
            <% } else { %>
              <span class="text-muted">Already <%= poem.status %></span>
            <% } %>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>
</body>
</html>
